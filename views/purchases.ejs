<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Table App -  Purchases</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=3">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="../css/style.css">
</head>
<body>
    <div class="container">
        <%- include ./partials/_intro.ejs  %>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th class="j-number-th">No:</th>
                    <th>Car:</th>
                    <th>Payment Method:</th>
                    <th>Currency:</th>
                    <th>City:</th>
                </tr>
            </thead>
            <% purchases.forEach((purchas) => {  %>
                <tbody>
                    <tr>
                        <td class="j-number-td"><%= purchas.id %></td>
                        <td><%= purchas.car %></td>
                        <td><%= purchas.payment_method %></td>
                        <td align="right"><%= purchas.currency %></td>
                        <td><%= purchas.city %></td>
                    </tr>
                </tbody>
            <% }) %>
        </table>
    </div>

<script src="../js/vendor/jquery-1.8.3.min.js"></script>
<script src="../js/app.js"></script>
</body>
</html>